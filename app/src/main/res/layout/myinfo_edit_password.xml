<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- 닫기 버튼 -->
    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/close_icon"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <!-- 타이틀 -->
    <TextView
        android:id="@+id/tv_title_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호를 변경해주세요"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"/>

    <!-- 현재 비밀번호 -->
    <TextView
        android:id="@+id/tv_now_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 비밀번호"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_below="@id/tv_title_pw"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:id="@+id/box_now_pw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_edittext_bg"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        android:layout_below="@id/tv_now_pw"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/edit_now_pw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:hint="현재 비밀번호"
            android:textSize="16sp"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <!-- 새 비밀번호 -->
    <TextView
        android:id="@+id/tv_new_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새 비밀번호"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_below="@id/box_now_pw"
        android:layout_marginTop="25dp"/>

    <LinearLayout
        android:id="@+id/box_new_pw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_edittext_bg"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        android:layout_below="@id/tv_new_pw"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/edit_new_pw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:hint="새 비밀번호"
            android:textSize="16sp"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <!-- 새 비밀번호 확인 -->
    <TextView
        android:id="@+id/tv_new_pw_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새 비밀번호 확인"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_below="@id/box_new_pw"
        android:layout_marginTop="25dp"/>

    <LinearLayout
        android:id="@+id/box_new_pw_check"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_edittext_bg"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        android:layout_below="@id/tv_new_pw_check"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/edit_new_pw_check"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:hint="새 비밀번호 확인"
            android:textSize="16sp"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <!-- 저장 버튼 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save_pw"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="저장"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:background="@drawable/btn_gray_round"
        android:backgroundTint="@null"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"/>
</RelativeLayout>
